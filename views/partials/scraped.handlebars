{{#if this.saved}}
{{else}}
<div class="card">
    <div class="card-content">
        <div class="media">
            <div class="media-right">
                <a class="btn btn-info" data-id={{this.id}} data-saved="true">Save Article</a>
            </div>
            <div class="media-content">
                <p class="title is-4">{{this.title}}</p>
                <p class="summary is-4">{{this.summary}}</p>
                <p><a class="link is-4" href={{this.link}}></a></p>
            </div>
        </div>
    </div>
</div>
<br>
{{/if}}